<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Xgag</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/Index">
                    <img src="http://www.naxex-tech.com/images/naxex-homelogo" class="navbar-brand" height="55" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-picture"></span>
                            Meme Generator
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="https://imgflip.com/memegenerator" target="_blank">imgflip</a></li>
                            <li><a href="https://memegenerator.net/" target="_blank">MemeGenerator.net</a></li>
                            <li><a href="https://makeameme.org/memegenerator target="_blank"">MakeAMeme</a></li>
                            <li><a href="http://memeful.com/generator" target="_blank">Memeful</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Home/Upload">
                            <span class="glyphicon glyphicon-upload"></span>
                            Upload
                        </a>
                    </li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Xgag</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
